@model IEnumerable<clase1posta.Models.Inmueble>

@{
    ViewData["Title"] = "Index";
}
<div>
    <h2 style="display:inline-block">Inmuebles</h2>
    <a class="btn-floating btn-large waves-effect waves-light light-blue lighten-2 btn tooltipped" data-position="bottom" data-tooltip="Agregar Inquilino" asp-action="Create" style="margin-top:-20px; margin-left: 25px"><i class="material-icons">add</i></a>
</div>
<br />
<div class="light-blue lighten-5 contenedor">
    <table class="table highlight centered" id="tabla">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Id Prop
                </th>
                <th>
                    Nombre Prop
                </th>
                <th>
                    Apellido Prop
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdTipo)
                </th>
                <th>
                    Tipo
                </th>
                <th>
                    Ambientes
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdInmueble)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPropietario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Propietario.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Propietario.apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdTipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo.nombreTipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CantAmbientes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>

                    @if (item.Estado == true)
                    {
                        <td>
                            L
                        </td>
                    }
                    else
                    {
                        <td>
                            N/L
                        </td>
                    }

                    <td>
                        <a href="@Url.Action("Edit", "Inmueble", new { id = item.IdInmueble})" class="waves-effect waves-light btn-flat light-blue lighten-3 tooltipped" data-position="bottom" data-tooltip="Editar" style="border-radius:100px"><i class="tiny material-icons">create</i></a>
                        <a href="@Url.Action("Delete", "Inmueble", new { id = item.IdInmueble})" class="waves-effect waves-light btn-flat light-blue lighten-3 tooltipped" data-position="bottom" data-tooltip="Eliminar" style="border-radius:100px; margin-top: 10px"><i class="tiny material-icons">delete</i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="fixed-action-btn ">
    <a id="menu" class="waves-effect waves-light btn btn-floating light-blue lighten-2"><i class="material-icons">announcement</i></a>
</div>

<div class="tap-target " id="colorTap" data-target="menu">
    <div class="tap-target-content ">
        <h5 id="tituloAnuncio">Title</h5>
        <p id="textoAnuncio">A bunch of text</p>
    </div>
</div>