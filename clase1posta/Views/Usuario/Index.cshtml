@model IEnumerable<clase1posta.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

    <div>
        <h2 style="display:inline-block">Usuarios</h2>
        <a class="btn-floating btn-large waves-effect waves-light light-blue lighten-2 btn tooltipped" data-position="bottom" data-tooltip="Agregar Usuario" asp-action="Create" style="margin-top:-20px; margin-left: 25px"><i class="material-icons">add</i></a>
    </div>
<br />
<div class="light-blue lighten-5 contenedor">
    <table class="table highlight centered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdUsuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rol)
                </th>
                <th>

                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdUsuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Rol)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdUsuario }) |

                        @Html.ActionLink("Delete", "Delete", new { id = item.IdUsuario })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="fixed-action-btn ">
    <a id="menu" class="waves-effect waves-light btn btn-floating light-blue lighten-2"><i class="material-icons">announcement</i></a>
</div>

<div class="tap-target" id="prueba" data-target="menu">
    <div class="tap-target-content">
        <h5 id="prueba2">Title</h5>
        <p>A bunch of text</p>
    </div>
</div>
